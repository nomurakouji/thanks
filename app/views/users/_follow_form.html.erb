<div id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
    <%= form_with(model: current_user.active_relationships.build(followed_id: user.id), method: :post ) do  |f| %>
      <%= f.hidden_field :followed_id %>
       <button type="submit" class="btn btn-outline-primary">フォロー</button>
    
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id), method: :delete ) do |f| %>
      <button type="submit" class="btn btn-outline-danger">フォロー外す</button>
      
    <% end %>
  <% end %>
</div>


