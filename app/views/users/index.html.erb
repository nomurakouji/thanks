
<table>
  <tr>
    <th>ID</th>
    <th>部門</th>
    <th>氏名</th>
    <th>email</th>
  </tr>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.department.name %></td> 
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if current_user.admin == true  || ( current_user.id == user.id )%>
          <td><%= link_to "Edit", edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



