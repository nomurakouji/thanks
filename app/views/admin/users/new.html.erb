<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class = "box">
  <div class = "box-inner">

<%= form_with(model: @user, url: admin_users_path, local: true) do |f| %>
   <div class="field">
    <%= f.label :部門 %>
    <%= f.collection_select :department_id, Department.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Eメール %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :画像 %>
    <%= f.file_field :image, class: "image" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

 <div class="actions">
     <button type="submit" class="btn btn-outline-primary">登録する</button>
  </div>
<% end %>

<%= link_to 'Back', admin_users_path %>
  </div>
</div>


