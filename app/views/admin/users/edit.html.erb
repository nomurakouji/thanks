<%= stylesheet_link_tag 'sessions', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class = "box">
  <div class = "box-inner">

    <%= form_with(model: @user, url: admin_user_path, local: true) do |f| %>
     <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "") %> 件のエラーがあります。</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p>
        ユーザーID:<%= @user.id %>
      </p>
      
    <div class="field">
        <%= f.label :部門 %>
        <%= f.collection_select :department_id, Department.all, :id, :name %>
      </div>

      <div>
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>
      
      <div>
        <%= f.label :Eメール %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :写真 %><br/>
        <%= image_tag @user.image.url %>
        <br>
        <br>
        <%= f.file_field :image, class: "image" %>
      </div>
    <br>
      <div><button class="btn btn-outline-primary">編集する</button></div>
    <% end %>
    <br>
    
    <%= link_to "戻る", admin_users_path %>
  </div>
</div>
