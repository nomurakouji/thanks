<table>
  <thead>
    <tr>
      <th>Date</th> 
      <th>From</th>    
      <th>To</th>
      <th>Image</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime('%Y/%m/%d/%R') %></td>
        <td><%= post.user.name %></td>
        <td><%= User.find(post.receiver_id).name %></td>    
        <td><img src = <%= User.find(post.receiver_id).image.url %> class = "icon_image"></td>
        <td><%= post.comment %></td>
        <td><%= link_to 'Show', admin_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(post.id) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
