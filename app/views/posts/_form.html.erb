<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :From %>
    <%= @post_name %>
  </div>

  <div class="field">
    <%= form.label :To %>
    <%= form.collection_select :receiver_id, User.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= form.label :Thanks! %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

