<%= stylesheet_link_tag 'notifications', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class = "box">
  <div class = "box-inner">
      <div class = "topic">
          <a>いいね情報</a>
          <a><span><i class="fa-solid fa-heart fa-1x" style="color: deeppink;"></i></span></a>
          <a>フォロー情報</a>
          <a><span><i class="fa-solid fa-face-grin-wide fa-1x" style="color: orange;"></i></span></a>
      </div>
      <% if @notifications.exists? %>
        <div class="users-index">
          <%# これはeachと同義。部分パーシャル %>
          <%# <%= render @notifications %> 
          <% @notifications.each do |notification| %> 
            <table class="table">
                <%# パーシャルでnotificationファイルを呼び出し %>
                <%# locals: {部分テンプレート内で使う変数:変数に入れる値} %>
                <td><%= render partial: 'notification', locals: {notification: notification} %></td>
            </table>
          <% end %> 
          <%= paginate @notifications %>
        </div>
      <% else %>
        <h5 class="notice">現時点ではありません</h5>
        <p>投稿していいねやフォローを増やしましょう!</p>
      <% end %>
  </div>
</div>
