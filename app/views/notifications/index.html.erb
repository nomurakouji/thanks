<%= stylesheet_link_tag 'notifications', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class = "box">
  <div class = "box-inner">
      <ul class = "nav">
        <li><p class="sub-title">いいね情報</p></li>
        <li><span><i class="fa-solid fa-heart fa-1x" style="color: deeppink;"></i></span></li>
      <%# <h4 class="sub-title">いいね情報</h4> %>
      <%# <span><i class="fa-solid fa-heart fa-2x" style="color: deeppink;"></i></span> %>
      </ul>
      <% if @notifications.exists? %>
        <div class="users-index">
          <%# これはeachと同義。部分パーシャル %>
          <%# <%= render @notifications %> 
        <% @notifications.each do |notification| %> 
        <table class="table">
            <td><%= render partial: 'notification', locals: {notification: notification} %></td>
        </table>
        <% end %> 
        <%= paginate @notifications %>
        </div>
      <% else %>
        <h5 class="notice">現時点ではありません</h5>
        <p>投稿していいねを増やしましょう!</p>
      <% end %>
  </div>
</div>
